{
  "permissions": {
    "allow": [
      "Bash(npm run build:*)",
      "Bash(npx tsc:*)",
      "Bash(npm run build:dev:*)",
      "Bash(node:*)",
      "Bash(npx ts-node:*)",
      "Bash(test:*)",
      "Bash(cat:*)"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./**/*.env)",
      "Read(./**/*.env.*)",
      "Read(./secrets/**)",
      "Read(./**/secrets/**)",
      "Read(./**/*secret*)",
      "Read(./**/*key*)",
      "Read(./**/*token*)",
      "Read(./**/*credential*)",
      "Read(./**/*password*)"
    ]
  }
}
